<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="com.cdbs.oegen" xmlns="com.cdbs.oegen"
>

	<xs:simpleType name="oebjectId">
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:complexType name="oebject" abstract="true">
		<xs:sequence maxOccurs="1" minOccurs="0">
			<xs:element name="comment" minOccurs="0">
				<xs:complexType>
					<xs:sequence>
						<xs:any namespace="http://www.w3.org/1999/xhtml" minOccurs="1"
							maxOccurs="unbounded" processContents="skip" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" />
		<xs:attribute name="id" type="oebjectId" />
	</xs:complexType>

	<xs:complexType name="person">
		<xs:complexContent>
			<xs:extension base="oebject">
				<xs:sequence>
					<xs:choice minOccurs="0" maxOccurs="3">
						<xs:element name="firstName" type="xs:string"
							minOccurs="0" maxOccurs="1" />
						<xs:element name="lastName" type="xs:string" minOccurs="0"
							maxOccurs="1" />
						<xs:element name="gender" type="xs:string" minOccurs="0"
							maxOccurs="1" />
					</xs:choice>
					<xs:choice minOccurs="0" maxOccurs="unbounded">
						<xs:element name="list" minOccurs="0"
							maxOccurs="unbounded"
						>
							<xs:complexType>
								<xs:sequence>
									<xs:choice minOccurs="0"
										maxOccurs="unbounded"
									>
										<xs:element name="person"
											type="person"
										/>
										<xs:element name="personRef"
											type="personRef"
										/>
									</xs:choice>
								</xs:sequence>
								<xs:attribute name="of"
									type="p2pRelType"
								/>
							</xs:complexType>
						</xs:element>
						<xs:element name="person" type="subperson"
							minOccurs="0" maxOccurs="unbounded"
						/>
						<xs:element name="personRef"
							type="person2PersonRef" minOccurs="0" maxOccurs="unbounded"
						/>
					</xs:choice>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="subperson">
		<xs:complexContent>

			<xs:extension base="person">
				<xs:attribute name="relation" type="p2pRelType" />
			</xs:extension>

		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="personRef">
		<xs:attribute name="ref" type="oebjectId" />
	</xs:complexType>

	<xs:complexType name="person2PersonRef">
		<xs:complexContent>
			<xs:extension base="personRef">
				<xs:attribute name="relation" type="p2pRelType" />
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:simpleType name="p2pRelType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="father" />
			<xs:enumeration value="mother" />
			<xs:enumeration value="child" />
			<xs:enumeration value="daughter" />
			<xs:enumeration value="son" />
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="oegendb">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="person" type="person" minOccurs="0"
					maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
		<xs:unique name="uniqueId">
			<xs:selector xpath="person|place" />
			<xs:field xpath="@id" />
		</xs:unique>
		<xs:keyref name="personRef" refer="uniqueId">
			<xs:selector xpath="personRef" />
			<xs:field xpath="@ref" />
		</xs:keyref>
	</xs:element>

</xs:schema>